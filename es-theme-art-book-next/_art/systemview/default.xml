<theme defaultView="grid">
	<formatVersion>7</formatVersion>
	
	<variables>
		<mainFont>./../_art/Acre.otf</mainFont>
	</variables>
  
	<feature supported="carousel">
	<view name="system">
	<carousel name="systemcarousel">
		<type>horizontal</type>
		<pos>0 0</pos> 
		<size>1 1</size> 
		<color>FFFFFF00</color>
		<logoScale>1</logoScale>
		<logoSize>1 1</logoSize>
		<maxLogoCount>4</maxLogoCount>
	</carousel>

	<text name="systemInfo">
		<backgroundColor>dddddd00</backgroundColor>
		<forceUppercase>0</forceUppercase>
		<fontSize>0.04</fontSize>
		<pos>0.5 0.87</pos>
		<origin>0.5 0.5</origin>
		<forceUppercase>0</forceUppercase>
		<fontPath>${mainFont}</fontPath>
	</text>
	</view>
	</feature>

	<view name="system">
		<image name="system_name_logo" extra="true">
			<path>./../_art/logos/${system.theme}.svg</path>
			<maxSize>0.75 0.5</maxSize>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<zIndex>101</zIndex>
		</image>
	</view>
</theme>